form {
	width: 60%
	// border: 1px solid #38506a
	margin: 20px
	padding: 20px
	border-radius: 5px
	// background-color: #e7e7e7
}
label {
	font-size: 12px
	display: none
	width: 100%
}
input, textarea {
	font-family: 'roboto', system-ui
    font-size: 1em
	margin-bottom: 20px
	width: 100%
	padding: 15px
	box-sizing: border-box
	border: 1px solid #ccc
    background: #c3c3c3
}
::placeholder{
    color #f2f2f2
}
textarea {
	resize: vertical
	min-height: 100px
	max-height: 300px
}
input:focus, textarea:focus {
	border: 1px solid #38506a
}
input[type="submit"] {
    width: 130px
	margin-bottom: 1px
	text-transform: uppercase
	// border: 1px solid #38506a
	color: #f2f2f2
	background-color: paleta
	transition: all 0.3s ease-in-out
}
input[type="submit"]:hover{
	background: #38506a
	cursor: pointer
	color: #000000
}
