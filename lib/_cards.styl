.bodyToy{
    background-image: url("../img/textura.png")
    background-repeat: repeat
    }
.headerJ{
    background-image: url("../img/dust_scratches.png")
    // background: white
    }  
.imgJ{
    margin-bottom: 70px
    }      
.tituloToys{
    text-transform: uppercase
    color: #FF504B
    font-family: 'roboto'
    font-size: 32px
    margin-top: 32px
    }    
.row{
    display: flex
    padding: 25px
    justify-content: space-around
    margin: auto
    }
.card {
    background: #f2f2f2
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)
    transition: 0.3s
    border: 1px solid rgba(255, 255,255, 0.3)
    // border-radius: 15px 15px 0 0
    width 330px
    border-bottom: 5px solid #309CA1
}
.card img{
    // padding: 15px
    width 100%
    // border-bottom: 1px solid rgba(0,0,0,0.3)
    }
.card img:hover{
    transform: scale(1.05,1.05)
    }    
.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2)
}
.card .con {
    padding: 2px 16px
}
.card .con h4{
        font-family: 'roboto'
        font-size: 24px
        padding-top: 5%
        padding-bottom: 5%
        color: #4462AC
    }
.card .con p{
    padding-bottom: 15px
    color: articulo
    }    
@media wMenu
    .row
        display: flex
        flex-direction: column
    .card
        margin: auto
        margin-bottom: 20px
    .tituloToys
        text-align: center    